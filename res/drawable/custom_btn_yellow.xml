<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#d7811a" />
             <gradient  android:angle="-90"  android:startColor="#ffb41a" android:endColor="#f9f77e" />                
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#d7811a" />
             <solid  android:color="#fbbe28"/>       
         </shape> 
    </item>
    <item>
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#d7811a" />
             <gradient  android:angle="-90"  android:startColor="#fff36d" android:endColor="#f9af1a" />            
         </shape>
     </item>
</selector>